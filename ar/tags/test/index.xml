&lt;script&gt;
(function() {
const containers = document.querySelectorAll('.encrypted-content');
containers.forEach(function(container) {
const input = container.querySelector('.pwd-input');
const button = container.querySelector('.decrypt-btn');
const error = container.querySelector('.error');
const content = container.querySelector('.decrypted-content');
const prompt = container.querySelector('.password-prompt');
const correctPassword = input.getAttribute('data-password');
function checkPassword() {
if (input.value === correctPassword) {
content.style.display = 'block';
prompt.style.display = 'none';
error.style.display = 'none';
} else {
error.style.display = 'block';
}
}
button.addEventListener('click', checkPassword);
input.addEventListener('keypress', function(e) {
if (e.key === 'Enter') {
checkPassword();
}
});
});
})();
